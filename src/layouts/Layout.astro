---
import type { Language } from '../consts';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  lang?: Language;
  image?: string;
}

const { title, description, lang = 'en', image } = Astro.props;
---

<!doctype html>
<html lang={lang} data-lang={lang}>
  <head>
    <BaseHead title={title} description={description} lang={lang} image={image} />
  </head>
  <body>
    <a href="#main" class="skip-link">Skip to content</a>
    <Header lang={lang} />
    <main id="main">
      <slot />
    </main>
    <Footer lang={lang} />
  </body>
</html>

<style is:global>
  .skip-link {
    position: absolute;
    top: -40px;
    left: 0;
    padding: 8px 16px;
    background: var(--accent-primary, #3AAFAF);
    color: white;
    z-index: 1000;
    transition: top 0.2s;
  }

  .skip-link:focus {
    top: 0;
  }
</style>
