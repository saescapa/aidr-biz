---
import Layout from '../../layouts/Layout.astro';
import { SITE_TITLE_EN, PURCHASE_LINKS, ROUTES } from '../../consts';

const lang = 'en';
const pageTitle = `The Book | ${SITE_TITLE_EN}`;
const pageDescription = 'Discover how AI is transforming business. Full details, table of contents, and what you will learn.';
---

<Layout title={pageTitle} description={pageDescription} lang={lang}>
  <!-- Breadcrumb -->
  <nav class="breadcrumb" aria-label="Breadcrumb">
    <div class="container">
      <a href={ROUTES.home.en}>Home</a>
      <span class="separator">/</span>
      <span aria-current="page">Book</span>
    </div>
  </nav>

  <!-- Book Header -->
  <section class="book-header">
    <div class="container">
      <div class="book-header-content">
        <div class="book-cover">
          <div class="book-cover-placeholder">
            <span>Book Cover</span>
            <span class="placeholder-note">English Edition</span>
          </div>
        </div>
        <div class="book-info">
          <h1>{SITE_TITLE_EN}</h1>
          <p class="subtitle">[Book subtitle placeholder - the compelling secondary headline]</p>
          <p class="authors">By Jorge Calvo & Carlos Escapa</p>
          <a href={PURCHASE_LINKS.en} class="btn btn-primary" target="_blank" rel="noopener">
            Buy on Amazon
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Description -->
  <section class="book-description">
    <div class="container-narrow">
      <h2>About the Book</h2>
      <p>[Opening paragraph placeholder - hook the reader with the core problem this book solves. What keeps business leaders up at night when it comes to AI?]</p>
      <p>[Second paragraph placeholder - introduce the solution. How does this book provide clarity and actionable guidance? What makes it different from other AI books?]</p>
      <p>[Third paragraph placeholder - the promise. What will readers be able to do after reading this book? What transformation can they expect?]</p>
    </div>
  </section>

  <!-- Table of Contents -->
  <section class="toc-section">
    <div class="container-narrow">
      <h2>What's Inside</h2>
      <ol class="toc-list">
        <li>
          <span class="chapter-number">Chapter 1</span>
          <span class="chapter-title">[Chapter Title Placeholder]</span>
        </li>
        <li>
          <span class="chapter-number">Chapter 2</span>
          <span class="chapter-title">[Chapter Title Placeholder]</span>
        </li>
        <li>
          <span class="chapter-number">Chapter 3</span>
          <span class="chapter-title">[Chapter Title Placeholder]</span>
        </li>
        <li>
          <span class="chapter-number">Chapter 4</span>
          <span class="chapter-title">[Chapter Title Placeholder]</span>
        </li>
        <li>
          <span class="chapter-number">Chapter 5</span>
          <span class="chapter-title">[Chapter Title Placeholder]</span>
        </li>
        <li>
          <span class="chapter-number">Chapter 6</span>
          <span class="chapter-title">[Chapter Title Placeholder]</span>
        </li>
      </ol>
    </div>
  </section>

  <!-- Target Audience -->
  <section class="audience-section">
    <div class="container-narrow">
      <h2>Who This Book Is For</h2>
      <ul class="audience-list">
        <li>[Target audience 1 - e.g., Business executives seeking to understand AI strategy]</li>
        <li>[Target audience 2 - e.g., Managers looking to implement AI in their teams]</li>
        <li>[Target audience 3 - e.g., Entrepreneurs wanting to leverage AI for growth]</li>
        <li>[Target audience 4 - e.g., Students and academics studying business innovation]</li>
      </ul>
    </div>
  </section>

  <!-- Specifications -->
  <section class="specs-section">
    <div class="container-narrow">
      <h2>Book Details</h2>
      <dl class="specs-list">
        <div class="spec-item">
          <dt>Format</dt>
          <dd>[Kindle, Paperback, etc.]</dd>
        </div>
        <div class="spec-item">
          <dt>Pages</dt>
          <dd>[Number of pages]</dd>
        </div>
        <div class="spec-item">
          <dt>ISBN</dt>
          <dd>[ISBN number]</dd>
        </div>
        <div class="spec-item">
          <dt>Publisher</dt>
          <dd>[Publisher name]</dd>
        </div>
        <div class="spec-item">
          <dt>Published</dt>
          <dd>[Publication date]</dd>
        </div>
        <div class="spec-item">
          <dt>Language</dt>
          <dd>English</dd>
        </div>
      </dl>
    </div>
  </section>

  <!-- Purchase CTA -->
  <section class="purchase-cta">
    <div class="container text-center">
      <h2>Ready to Transform Your Business?</h2>
      <p>Available now in English and Spanish editions.</p>
      <div class="purchase-buttons">
        <a href={PURCHASE_LINKS.en} class="btn btn-primary" target="_blank" rel="noopener">
          Buy English Edition
        </a>
        <a href={PURCHASE_LINKS.es} class="btn btn-secondary" target="_blank" rel="noopener">
          Buy Spanish Edition
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Breadcrumb */
  .breadcrumb {
    padding: 16px 0;
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .breadcrumb a {
    color: var(--text-secondary);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    color: var(--accent-primary);
  }

  .breadcrumb .separator {
    margin: 0 8px;
  }

  /* Book Header */
  .book-header {
    padding: 48px 0 96px;
  }

  .book-header-content {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 64px;
    align-items: start;
  }

  .book-cover-placeholder {
    width: 280px;
    height: 420px;
    background: var(--bg-secondary);
    border-radius: 8px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 8px;
    color: var(--text-secondary);
    font-weight: 600;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  .placeholder-note {
    font-size: 0.875rem;
    font-weight: 400;
  }

  .book-info h1 {
    margin-bottom: 16px;
  }

  .subtitle {
    font-size: 1.25rem;
    color: var(--text-secondary);
    margin-bottom: 8px;
  }

  .authors {
    color: var(--text-secondary);
    margin-bottom: 32px;
  }

  /* Sections */
  .book-description,
  .toc-section,
  .audience-section,
  .specs-section {
    padding: 64px 0;
  }

  .book-description {
    background: var(--bg-secondary);
  }

  .toc-section {
    background: var(--bg-primary);
  }

  .audience-section {
    background: var(--bg-secondary);
  }

  .specs-section {
    background: var(--bg-primary);
  }

  .book-description h2,
  .toc-section h2,
  .audience-section h2,
  .specs-section h2 {
    margin-bottom: 32px;
  }

  .book-description p {
    margin-bottom: 1.5em;
  }

  /* TOC List */
  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-list li {
    display: flex;
    gap: 16px;
    padding: 16px 0;
    border-bottom: 1px solid var(--text-secondary);
  }

  .toc-list li:last-child {
    border-bottom: none;
  }

  .chapter-number {
    font-weight: 600;
    color: var(--accent-primary);
    min-width: 100px;
  }

  .chapter-title {
    color: var(--text-primary);
  }

  /* Audience List */
  .audience-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .audience-list li {
    padding: 12px 0 12px 32px;
    position: relative;
  }

  .audience-list li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 8px;
    height: 8px;
    background: var(--accent-primary);
    border-radius: 50%;
  }

  /* Specs List */
  .specs-list {
    display: grid;
    gap: 16px;
  }

  .spec-item {
    display: flex;
    gap: 16px;
    padding: 12px 0;
    border-bottom: 1px solid var(--bg-secondary);
  }

  .spec-item dt {
    font-weight: 600;
    min-width: 120px;
    color: var(--text-secondary);
  }

  .spec-item dd {
    margin: 0;
  }

  /* Purchase CTA */
  .purchase-cta {
    padding: 96px 24px;
    background: var(--bg-secondary);
  }

  .purchase-cta h2 {
    margin-bottom: 16px;
  }

  .purchase-cta p {
    color: var(--text-secondary);
    margin-bottom: 32px;
  }

  .purchase-buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Buttons */
  .btn {
    display: inline-block;
    padding: 16px 32px;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: opacity 0.2s, transform 0.2s;
  }

  .btn:hover {
    text-decoration: none;
    transform: translateY(-1px);
  }

  .btn-primary {
    background: var(--accent-primary);
    color: var(--text-inverse);
  }

  .btn-primary:hover {
    opacity: 0.9;
  }

  .btn-secondary {
    background: transparent;
    border: 2px solid var(--accent-primary);
    color: var(--accent-primary);
  }

  .btn-secondary:hover {
    background: var(--accent-primary);
    color: var(--text-inverse);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .book-header-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .book-cover {
      display: flex;
      justify-content: center;
    }

    .book-cover-placeholder {
      width: 220px;
      height: 330px;
    }

    .book-description,
    .toc-section,
    .audience-section,
    .specs-section {
      padding: 48px 0;
    }

    .chapter-number {
      min-width: 80px;
    }

    .spec-item {
      flex-direction: column;
      gap: 4px;
    }
  }
</style>
