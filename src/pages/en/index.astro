---
import { Image } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';
import { SITE_TITLE_EN, SITE_DESCRIPTION_EN, PURCHASE_LINKS, AUTHORS, ROUTES } from '../../consts';
import coverEN from '../../assets/cover-en.jpg';

const lang = 'en';
---

<Layout title={SITE_TITLE_EN} description={SITE_DESCRIPTION_EN} lang={lang}>
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <div class="hero-text">
        <h1 class="display">AI from pilot to scale</h1>
        <p class="hero-subtitle">A practical guide to transforming your business with artificial intelligence</p>
        <div class="hero-ctas">
          <a href={PURCHASE_LINKS.en} class="btn btn-primary" target="_blank" rel="noopener">
            Buy Now
          </a>
          <a href={ROUTES.book.en} class="btn btn-secondary">
            Learn More
          </a>
        </div>
      </div>
      <div class="hero-image">
        <Image
          src={coverEN}
          alt="AI in Business - English Edition book cover"
          class="book-cover"
          width={300}
        />
      </div>
    </div>
  </section>

  <!-- Value Section -->
  <section class="value-section">
    <div class="container">
      <h2 class="section-heading">Why This Book</h2>
      <div class="value-grid">
        <div class="value-card">
          <div class="value-icon">60+</div>
          <h3>Real-World Case Studies</h3>
          <p>From Amazon to MYbank, see how leading companies achieve 650% performance gains with strategic AI integration.</p>
        </div>
        <div class="value-card">
          <div class="value-icon">5</div>
          <h3>Proven Frameworks</h3>
          <p>Proprietary tools including the AI Moat, MELDS+, and AIM-DDI diagnostic developed from hands-on transformation experience.</p>
        </div>
        <div class="value-card">
          <div class="value-icon">1,400+</div>
          <h3>Executive-Tested</h3>
          <p>Built from training executives at ESADE and advising companies across multiple sectors globally.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Authors Preview -->
  <section class="authors-preview">
    <div class="container">
      <h2 class="section-heading">Meet the Authors</h2>
      <div class="authors-grid">
        {AUTHORS.map((author) => (
          <div class="author-preview-card">
            <div class="author-photo-placeholder">
              <span>Photo</span>
            </div>
            <h3>{author}</h3>
            <p class="author-credential">Lead, AI in Business Program at ESADE</p>
          </div>
        ))}
      </div>
      <div class="authors-cta">
        <a href={ROUTES.authors.en} class="btn btn-ghost">
          Read Full Bios &rarr;
        </a>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="final-cta">
    <div class="container text-center">
      <h2>Lead the AI-Driven Transformation</h2>
      <p>The future belongs to those who combine human imagination with machine intelligence. Start today.</p>
      <a href={PURCHASE_LINKS.en} class="btn btn-primary btn-large" target="_blank" rel="noopener">
        Get Your Copy
      </a>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .hero {
    padding: 96px 24px;
    background: var(--bg-primary);
  }

  .hero-content {
    max-width: 1280px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 64px;
    align-items: center;
  }

  .hero-text {
    max-width: 560px;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--text-secondary);
    margin: 24px 0 32px;
  }

  .hero-ctas {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }

  .hero-image {
    display: flex;
    justify-content: center;
  }

  .book-cover {
    width: 300px;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  /* Value Section */
  .value-section {
    padding: 96px 24px;
    background: var(--bg-secondary);
  }

  .section-heading {
    text-align: center;
    margin-bottom: 48px;
  }

  .value-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
  }

  .value-card {
    background: var(--bg-primary);
    padding: 32px;
    border-radius: 12px;
    text-align: center;
  }

  .value-icon {
    width: 64px;
    height: 64px;
    background: var(--accent-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 24px;
    color: var(--text-inverse);
    font-size: 0.875rem;
  }

  .value-card h3 {
    margin-bottom: 12px;
  }

  .value-card p {
    color: var(--text-secondary);
    margin: 0;
  }

  /* Authors Preview */
  .authors-preview {
    padding: 96px 24px;
  }

  .authors-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 48px;
    max-width: 800px;
    margin: 0 auto;
  }

  .author-preview-card {
    text-align: center;
  }

  .author-photo-placeholder {
    width: 180px;
    height: 180px;
    background: var(--bg-secondary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 24px;
    color: var(--text-secondary);
    font-weight: 500;
  }

  .author-preview-card h3 {
    margin-bottom: 8px;
  }

  .author-credential {
    color: var(--text-secondary);
    margin: 0;
  }

  .authors-cta {
    text-align: center;
    margin-top: 48px;
  }

  /* Final CTA */
  .final-cta {
    padding: 96px 24px;
    background: var(--bg-secondary);
  }

  .final-cta h2 {
    margin-bottom: 16px;
  }

  .final-cta p {
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto 32px;
  }

  /* Buttons */
  .btn {
    display: inline-block;
    padding: 16px 32px;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: opacity 0.2s, transform 0.2s;
  }

  .btn:hover {
    text-decoration: none;
    transform: translateY(-1px);
  }

  .btn-primary {
    background: var(--accent-primary);
    color: var(--text-inverse);
  }

  .btn-primary:hover {
    opacity: 0.9;
  }

  .btn-secondary {
    background: transparent;
    border: 2px solid var(--accent-primary);
    color: var(--accent-primary);
  }

  .btn-secondary:hover {
    background: var(--accent-primary);
    color: var(--text-inverse);
  }

  .btn-ghost {
    background: transparent;
    color: var(--accent-primary);
    padding: 8px 0;
  }

  .btn-ghost:hover {
    text-decoration: underline;
  }

  .btn-large {
    padding: 20px 48px;
    font-size: 1.125rem;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .hero-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-text {
      max-width: 100%;
    }

    .hero-ctas {
      justify-content: center;
    }

    .value-grid {
      grid-template-columns: 1fr;
      max-width: 400px;
      margin: 0 auto;
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding: 64px 24px;
    }

    .value-section,
    .authors-preview,
    .final-cta {
      padding: 64px 24px;
    }

    .hero-content {
      gap: 48px;
    }

    .book-cover {
      width: 240px;
    }

    .authors-grid {
      grid-template-columns: 1fr;
      gap: 32px;
    }

    .author-photo-placeholder {
      width: 140px;
      height: 140px;
    }
  }
</style>
