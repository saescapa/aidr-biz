---
import { Image } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';
import { ROUTES } from '../../consts';
import jorgePhoto from '../../assets/jorge-profile.jpg';
import carlosPhoto from '../../assets/carlos-profile.jpg';

const lang = 'en';
const pageTitle = 'The Authors';
const pageDescription = 'Meet Jorge Calvo and Carlos Escapa, the authors of The AI-driven Business.';

const authors = [
  {
    name: 'Jorge Calvo',
    title: 'Strategic Advisor & Leadership Educator',
    bio: [
      'Jorge Calvo brings decades of experience in senior executive roles at multinational technology firms. As a strategic advisor and leadership educator, he helps companies understand and apply AI pragmatically in their organisations. His dual executive-academic experience provides both breadth and depth in transforming business strategy through intelligence rather than trends.',
      'Since 2020, Jorge has led the AI in Business executive program at ESADE Executive Education, where over 1,400 executives have designed their own AI transformation plans. His advisory work spans multiple sectors and regions globally, identifying common patterns, recurring mistakes, and proven success factors for AI integration.',
    ],
    links: {
      linkedin: '#',
      twitter: '#',
      website: '#',
    },
  },
  {
    name: 'Carlos Escapa',
    title: 'Strategic Advisor & Leadership Educator',
    bio: [
      'Carlos Escapa has held leadership positions in multinational technology firms and academic roles at leading business schools. This combined executive and academic experience enables him to bridge the gap between technical AI capabilities and business strategyâ€”showing leaders how to adopt AI in service of higher purpose.',
      'As official presenter of the "Culture of Innovation" and "Learning from Amazon" programs at AWS, Carlos has contributed to training nearly 5,000 professionals through executive programs and corporate initiatives. His focus on pragmatic implementation patterns helps organisations move beyond AI pilots to company-wide adoption.',
    ],
    links: {
      linkedin: '#',
    },
  },
];
---

<Layout title={pageTitle} description={pageDescription} lang={lang}>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "ItemList",
    "itemListElement": authors.map((author, index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "item": {
        "@type": "Person",
        "name": author.name,
        "jobTitle": author.title,
        "description": author.bio.join(' '),
        "affiliation": {
          "@type": "Organization",
          "name": "ESADE Executive Education"
        }
      }
    }))
  })} />
  <!-- Breadcrumb -->
  <nav class="breadcrumb" aria-label="Breadcrumb">
    <div class="container">
      <a href={ROUTES.home.en}>Home</a>
      <span class="separator">/</span>
      <span aria-current="page">Authors</span>
    </div>
  </nav>

  <!-- Page Header -->
  <section class="page-header">
    <div class="container">
      <h1>Meet the Authors</h1>
      <p class="page-intro">Jorge Calvo and Carlos Escapa combine decades of senior executive experience with academic rigour. Together they lead the AI in Business program at ESADE and advise organisations worldwide on strategic AI adoption.</p>
    </div>
  </section>

  <!-- Authors -->
  <section class="authors-section">
    <div class="container">
      {authors.map((author, index) => (
        <article class={`author-profile ${index % 2 === 1 ? 'reversed' : ''}`}>
          <div class="author-photo">
            <Image
              src={index === 0 ? jorgePhoto : carlosPhoto}
              alt={author.name}
              class="author-photo-image"
              width={280}
            />
          </div>
          <div class="author-content">
            <h2>{author.name}</h2>
            <p class="author-title">{author.title}</p>
            {author.bio.map((paragraph) => (
              <p>{paragraph}</p>
            ))}
            <div class="author-links">
              <a href={author.links.linkedin} target="_blank" rel="noopener" aria-label={`${author.name} on LinkedIn`}>
                <span class="link-icon">in</span>
                LinkedIn
              </a>
              {author.links.twitter && (
                <a href={author.links.twitter} target="_blank" rel="noopener" aria-label={`${author.name} on Twitter`}>
                  <span class="link-icon">X</span>
                  Twitter
                </a>
              )}
              {author.links.website && (
                <a href={author.links.website} target="_blank" rel="noopener" aria-label={`${author.name}'s website`}>
                  <span class="link-icon">W</span>
                  Website
                </a>
              )}
            </div>
          </div>
        </article>
      ))}
    </div>
  </section>

  <!-- CTA -->
  <section class="authors-cta">
    <div class="container text-center">
      <h2>Ready to Learn from the Experts?</h2>
      <p>Discover actionable AI insights in their book.</p>
      <a href={ROUTES.book.en} class="btn btn-primary">
        Explore the Book
      </a>
    </div>
  </section>
</Layout>

<style>
  /* Breadcrumb */
  .breadcrumb {
    padding: 16px 0;
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .breadcrumb a {
    color: var(--text-secondary);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    color: var(--accent-primary);
  }

  .breadcrumb .separator {
    margin: 0 8px;
  }

  /* Page Header */
  .page-header {
    padding: 48px 0 64px;
    text-align: center;
  }

  .page-header h1 {
    margin-bottom: 24px;
  }

  .page-intro {
    max-width: 680px;
    margin: 0 auto;
    color: var(--text-secondary);
    font-size: 1.125rem;
  }

  /* Authors Section */
  .authors-section {
    padding: 0 0 96px;
  }

  .author-profile {
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: 64px;
    align-items: start;
    padding: 64px 0;
    border-bottom: 1px solid var(--bg-secondary);
  }

  .author-profile:last-child {
    border-bottom: none;
  }

  .author-profile.reversed {
    grid-template-columns: 1fr 300px;
  }

  .author-profile.reversed .author-photo {
    order: 2;
  }

  .author-profile.reversed .author-content {
    order: 1;
  }

  .author-photo-image {
    width: 280px;
    height: auto;
    border-radius: 12px;
    object-fit: cover;
  }

  .author-content h2 {
    margin-bottom: 8px;
  }

  .author-title {
    color: var(--accent-primary);
    font-weight: 600;
    margin-bottom: 24px;
  }

  .author-content p {
    margin-bottom: 1em;
  }

  .author-links {
    display: flex;
    gap: 24px;
    margin-top: 32px;
  }

  .author-links a {
    display: flex;
    align-items: center;
    gap: 8px;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.875rem;
  }

  .author-links a:hover {
    color: var(--accent-primary);
  }

  .link-icon {
    width: 32px;
    height: 32px;
    background: var(--bg-secondary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 0.75rem;
  }

  /* CTA */
  .authors-cta {
    padding: 96px 24px;
    background: var(--bg-secondary);
  }

  .authors-cta h2 {
    margin-bottom: 16px;
  }

  .authors-cta p {
    color: var(--text-secondary);
    margin-bottom: 32px;
  }

  /* Buttons */
  .btn {
    display: inline-block;
    padding: 16px 32px;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: opacity 0.2s, transform 0.2s;
  }

  .btn:hover {
    text-decoration: none;
    transform: translateY(-1px);
  }

  .btn-primary {
    background: var(--accent-primary);
    color: var(--text-inverse);
  }

  .btn-primary:hover {
    opacity: 0.9;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .author-profile,
    .author-profile.reversed {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .author-profile.reversed .author-photo,
    .author-profile.reversed .author-content {
      order: unset;
    }

    .author-photo {
      display: flex;
      justify-content: center;
    }

    .author-photo-image {
      width: 220px;
    }

    .author-links {
      justify-content: center;
    }
  }

  @media (max-width: 768px) {
    .author-profile {
      padding: 48px 0;
      gap: 32px;
    }

    .authors-section {
      padding-bottom: 48px;
    }

    .authors-cta {
      padding: 64px 24px;
    }
  }
</style>
