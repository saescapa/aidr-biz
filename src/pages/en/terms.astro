---
import Layout from '../../layouts/Layout.astro';
import { SITE_TITLE_EN, ROUTES } from '../../consts';

const lang = 'en';
const pageTitle = `Terms of Use | ${SITE_TITLE_EN}`;
const pageDescription = 'Terms of use for The AI-driven Business website.';
const lastUpdated = '[Date Placeholder]';
---

<Layout title={pageTitle} description={pageDescription} lang={lang}>
  <!-- Breadcrumb -->
  <nav class="breadcrumb" aria-label="Breadcrumb">
    <div class="container">
      <a href={ROUTES.home.en}>Home</a>
      <span class="separator">/</span>
      <span aria-current="page">Terms of Use</span>
    </div>
  </nav>

  <!-- Terms Content -->
  <article class="legal-content">
    <div class="container-narrow">
      <header class="legal-header">
        <h1>Terms of Use</h1>
        <p class="last-updated">Last updated: {lastUpdated}</p>
      </header>

      <section>
        <h2>Acceptance of Terms</h2>
        <p>[Terms acceptance placeholder - by accessing this website, you agree to these terms.]</p>
      </section>

      <section>
        <h2>Use of Website</h2>
        <p>[Website usage guidelines placeholder - permitted and prohibited uses of the website.]</p>
        <h3>Permitted Uses</h3>
        <ul>
          <li>[Permitted use 1 placeholder - e.g., viewing content for personal use]</li>
          <li>[Permitted use 2 placeholder - e.g., purchasing the book]</li>
          <li>[Permitted use 3 placeholder - e.g., downloading free resources]</li>
        </ul>
        <h3>Prohibited Uses</h3>
        <ul>
          <li>[Prohibited use 1 placeholder - e.g., reproducing content without permission]</li>
          <li>[Prohibited use 2 placeholder - e.g., using the site for unlawful purposes]</li>
          <li>[Prohibited use 3 placeholder - e.g., attempting to access restricted areas]</li>
        </ul>
      </section>

      <section>
        <h2>Intellectual Property</h2>
        <p>[Intellectual property placeholder - all content on this website is protected by copyright.]</p>
        <p>[Copyright ownership placeholder - content belongs to the authors/publishers.]</p>
      </section>

      <section>
        <h2>Book Content</h2>
        <p>[Book content terms placeholder - terms specific to the book content and excerpts.]</p>
        <p>[Sample content usage placeholder - limitations on using sample chapters or excerpts.]</p>
      </section>

      <section>
        <h2>External Links</h2>
        <p>[External links disclaimer placeholder - we are not responsible for content on linked websites.]</p>
        <p>[Amazon/retailer links placeholder - purchases are subject to retailer terms.]</p>
      </section>

      <section>
        <h2>Disclaimers</h2>
        <p>[General disclaimer placeholder - the website is provided "as is" without warranties.]</p>
        <p>[Content accuracy placeholder - while we strive for accuracy, we do not guarantee all information is current.]</p>
      </section>

      <section>
        <h2>Limitation of Liability</h2>
        <p>[Liability limitation placeholder - extent of liability for any damages arising from use of the website.]</p>
      </section>

      <section>
        <h2>Governing Law</h2>
        <p>[Governing law placeholder - which jurisdiction's laws govern these terms.]</p>
      </section>

      <section>
        <h2>Changes to Terms</h2>
        <p>[Terms modification placeholder - we reserve the right to modify these terms at any time.]</p>
      </section>

      <section>
        <h2>Contact Us</h2>
        <p>[Contact information for terms-related inquiries placeholder.]</p>
        <p>Email: [email@placeholder.com]</p>
      </section>
    </div>
  </article>
</Layout>

<style>
  /* Breadcrumb */
  .breadcrumb {
    padding: 16px 0;
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .breadcrumb a {
    color: var(--text-secondary);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    color: var(--accent-primary);
  }

  .breadcrumb .separator {
    margin: 0 8px;
  }

  /* Legal Content */
  .legal-content {
    padding: 48px 0 96px;
  }

  .legal-header {
    margin-bottom: 48px;
  }

  .legal-header h1 {
    margin-bottom: 8px;
  }

  .last-updated {
    color: var(--text-secondary);
    font-size: 0.875rem;
  }

  .legal-content section {
    margin-bottom: 48px;
  }

  .legal-content section:last-child {
    margin-bottom: 0;
  }

  .legal-content h2 {
    font-size: 1.5rem;
    margin-bottom: 16px;
    padding-bottom: 8px;
    border-bottom: 2px solid var(--accent-primary);
  }

  .legal-content h3 {
    font-size: 1.125rem;
    margin: 24px 0 12px;
  }

  .legal-content p {
    margin-bottom: 1em;
  }

  .legal-content ul {
    margin: 0 0 1em 0;
    padding-left: 24px;
  }

  .legal-content li {
    margin-bottom: 8px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .legal-content {
      padding: 32px 0 64px;
    }

    .legal-content section {
      margin-bottom: 32px;
    }
  }
</style>
