---
import type { Language } from '../consts';
import { AUTHORS } from '../consts';

interface Props {
  lang?: Language;
}

const { lang = 'en' } = Astro.props;

const nav = {
  en: [
    { label: 'Book', href: '/en/book/' },
    { label: 'Authors', href: '/en/authors/' },
    { label: 'Resources', href: '/en/resources/' },
    { label: 'Buy', href: '/en/buy/' },
  ],
  es: [
    { label: 'Libro', href: '/es/libro/' },
    { label: 'Autores', href: '/es/autores/' },
    { label: 'Recursos', href: '/es/recursos/' },
    { label: 'Comprar', href: '/es/comprar/' },
  ],
};

const privacyLink = {
  en: { label: 'Privacy Policy', href: '/en/privacy/' },
  es: { label: 'Política de Privacidad', href: '/es/privacidad/' },
};

const currentYear = new Date().getFullYear();
const bookTitle = lang === 'es' ? 'La IA en los Negocios' : 'The AI-driven Business';
---

<footer>
  <div class="footer-inner">
    <div class="footer-content">
      <div class="footer-section">
        <h3>{lang === 'es' ? 'Navegación' : 'Navigation'}</h3>
        <ul>
          {nav[lang].map((item) => (
            <li><a href={item.href}>{item.label}</a></li>
          ))}
        </ul>
      </div>

      <div class="footer-section">
        <h3>{lang === 'es' ? 'Conectar' : 'Connect'}</h3>
        <ul>
          <li><a href="#" target="_blank" rel="noopener">LinkedIn</a></li>
          <li><a href="#" target="_blank" rel="noopener">Twitter</a></li>
        </ul>
      </div>
    </div>

    <div class="footer-bar">
      <p>&copy; {currentYear} {bookTitle}. {AUTHORS.join(' & ')}.</p>
      <a href={privacyLink[lang].href}>{privacyLink[lang].label}</a>
    </div>
  </div>
</footer>

<style>
  footer {
    background: var(--bg-secondary, #F5EDE0);
    margin-top: auto;
  }

  .footer-inner {
    max-width: 1280px;
    margin: 0 auto;
    padding: 48px 24px 24px;
  }

  .footer-content {
    display: flex;
    gap: 64px;
    margin-bottom: 48px;
  }

  .footer-section h3 {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-secondary, #3D5A73);
    margin-bottom: 16px;
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-section li {
    margin-bottom: 8px;
  }

  .footer-section a {
    color: var(--text-primary, #1A2E44);
    text-decoration: none;
  }

  .footer-section a:hover {
    color: var(--accent-primary, #3AAFAF);
  }

  .footer-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 24px;
    border-top: 1px solid var(--text-secondary, #3D5A73);
    font-size: 0.875rem;
    color: var(--text-secondary, #3D5A73);
  }

  .footer-bar a {
    color: var(--text-secondary, #3D5A73);
    text-decoration: none;
  }

  .footer-bar a:hover {
    color: var(--accent-primary, #3AAFAF);
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      gap: 32px;
    }

    .footer-bar {
      flex-direction: column;
      gap: 16px;
      text-align: center;
    }
  }
</style>
