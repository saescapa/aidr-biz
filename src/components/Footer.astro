---
import type { Language } from '../consts';
import { AUTHORS, ROUTES } from '../consts';

interface Props {
  lang?: Language;
}

const { lang = 'en' } = Astro.props;

const nav = {
  en: [
    { label: 'Book', href: ROUTES.book.en },
    { label: 'Authors', href: ROUTES.authors.en },
    { label: 'Resources', href: ROUTES.resources.en },
    { label: 'Buy', href: ROUTES.buy.en },
  ],
  es: [
    { label: 'Libro', href: ROUTES.book.es },
    { label: 'Autores', href: ROUTES.authors.es },
    { label: 'Recursos', href: ROUTES.resources.es },
    { label: 'Comprar', href: ROUTES.buy.es },
  ],
};

const currentYear = new Date().getFullYear();
const bookTitle = lang === 'es' ? 'La IA en los Negocios' : 'The AI-driven Business';
---

<footer>
  <div class="footer-inner">
    <div class="footer-content">
      <div class="footer-section">
        <h3>{lang === 'es' ? 'Navegaci√≥n' : 'Navigation'}</h3>
        <ul>
          {nav[lang].map((item) => (
            <li><a href={item.href}>{item.label}</a></li>
          ))}
        </ul>
      </div>

      <div class="footer-section">
        <h3>{lang === 'es' ? 'Conectar' : 'Connect'}</h3>
        <ul>
          <li><a href="#" target="_blank" rel="noopener">LinkedIn</a></li>
          <li><a href="#" target="_blank" rel="noopener">Twitter</a></li>
        </ul>
      </div>
    </div>

    <div class="footer-bar">
      <p>&copy; {currentYear} {bookTitle}. {AUTHORS.join(' & ')}.</p>
    </div>
  </div>
</footer>

<style>
  footer {
    background: var(--bg-secondary, #F5EDE0);
    margin-top: auto;
  }

  .footer-inner {
    max-width: 1280px;
    margin: 0 auto;
    padding: 48px 24px 24px;
  }

  .footer-content {
    display: flex;
    gap: 64px;
    margin-bottom: 48px;
  }

  .footer-section h3 {
    font-family: var(--font-heading);
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--accent-primary);
    margin-bottom: 16px;
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-section li {
    margin-bottom: 8px;
  }

  .footer-section a {
    position: relative;
    color: var(--text-primary, #1A2E44);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer-section a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--accent-primary);
    transition: width var(--transition-base);
  }

  .footer-section a:hover {
    color: var(--accent-primary, #3AAFAF);
  }

  .footer-section a:hover::after {
    width: 100%;
  }

  .footer-bar {
    padding-top: 24px;
    border-top: 1px solid color-mix(in srgb, var(--text-secondary) 30%, transparent);
    font-size: 0.875rem;
    color: var(--text-secondary, #3D5A73);
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      gap: 32px;
    }

    .footer-bar {
      text-align: center;
    }
  }
</style>
