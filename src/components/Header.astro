---
import type { Language } from '../consts';

interface Props {
  lang?: Language;
}

const { lang = 'en' } = Astro.props;

const nav = {
  en: [
    { label: 'Book', href: '/en/book/' },
    { label: 'Authors', href: '/en/authors/' },
    { label: 'Resources', href: '/en/resources/' },
  ],
  es: [
    { label: 'Libro', href: '/es/libro/' },
    { label: 'Autores', href: '/es/autores/' },
    { label: 'Recursos', href: '/es/recursos/' },
  ],
};

const cta = {
  en: { label: 'Buy', href: '/en/buy/' },
  es: { label: 'Comprar', href: '/es/comprar/' },
};

const homeHref = lang === 'es' ? '/es/' : '/en/';
const alternateLang = lang === 'es' ? 'en' : 'es';
const alternateHref = lang === 'es' ? '/en/' : '/es/';
---

<header>
  <div class="header-inner">
    <a href={homeHref} class="logo">
      {lang === 'es' ? 'La IA en los Negocios' : 'The AI-driven Business'}
    </a>

    <nav aria-label="Main">
      {nav[lang].map((item) => (
        <a href={item.href}>{item.label}</a>
      ))}
    </nav>

    <div class="header-actions">
      <div class="lang-switcher">
        <a href={homeHref} class:list={[{ active: true }]}>{lang.toUpperCase()}</a>
        <span class="divider">|</span>
        <a href={alternateHref}>{alternateLang.toUpperCase()}</a>
      </div>
      <a href={cta[lang].href} class="cta-button">{cta[lang].label}</a>
    </div>
  </div>
</header>

<style>
  header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--bg-primary, #A8D5E5);
    border-bottom: 1px solid var(--text-secondary, #3D5A73);
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 24px;
    height: 80px;
  }

  .logo {
    font-weight: 700;
    font-size: 1.125rem;
    color: var(--text-primary, #1A2E44);
    text-decoration: none;
  }

  nav {
    display: flex;
    gap: 32px;
  }

  nav a {
    color: var(--text-primary, #1A2E44);
    text-decoration: none;
    font-weight: 500;
  }

  nav a:hover {
    color: var(--accent-primary, #3AAFAF);
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .lang-switcher {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.875rem;
  }

  .lang-switcher a {
    color: var(--text-secondary, #3D5A73);
    text-decoration: none;
  }

  .lang-switcher a.active {
    color: var(--text-primary, #1A2E44);
    font-weight: 600;
  }

  .lang-switcher .divider {
    color: var(--text-secondary, #3D5A73);
  }

  .cta-button {
    background: var(--accent-primary, #3AAFAF);
    color: white;
    padding: 12px 24px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
  }

  .cta-button:hover {
    opacity: 0.9;
  }

  /* Mobile styles - TODO: implement hamburger menu */
  @media (max-width: 768px) {
    nav {
      display: none;
    }

    .header-inner {
      height: 64px;
    }
  }
</style>
